const fs = require('fs');

if (!fs.existsSync('data.txt')) {
  console.log('File data.txt does not exist.');
  process.exit(1);
}

const stream = fs.createReadStream('data.txt', 'utf8');

stream.on('data', (chunk) => {
  console.log(chunk);
});

stream.on('error', (err) => {
  console.error('Error:', err.message);
});
